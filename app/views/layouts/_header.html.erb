
<header class="main-header">
  <h1><%= link_to "PicMe", root_path, id: 'title', class: 'link' %></h1>
  <nav>
    <ul>
      <% if current_user %>
        <li><%= link_to current_user.name, current_user, class: 'link' %></li>
        <li><%= link_to "Home", root_path, class: 'link' %></li>
        <li>Popular</li>
        <li>About</li>
        <li><%= link_to 'Sign Out', session_path, method: :delete, class: 'link' %></li>
      <% else %>
        <li><%= link_to 'Sign Up', signup_path, class: 'link' %></li>
        <li><%= link_to 'Sign In', new_session_path, class: 'link' %></li>
      <% end %>
    </ul>
  </nav>
</header>
